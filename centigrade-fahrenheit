// This program lists on the screen the Centigrade to Fahrenheit conversions for C= -10 to C=10.


class Main {
public static void main(String[] args) {

  System.out.println("Centigrade to Fahrenheit conversions for C= -10 to C=10:");

    // declare variables 
    int nC;
    int nF;

    // loop
    
    for (nC = -10; nC < +10; nC++) { 
   
   // centigrade to fahrenheit conversion formula place this beside as I have here
   		nF = nC * 9/5 + 32;// centigrade to fahrenheit conversion formula
    	System.out.println(nC + "°C equals" + "\t" + nF + "°F");
		//<--- when you indent properly a line shows up to the left allowing you to close off the loop or if statement. Try to indent below and let me know if you need help. 
    }

    for (nC = 0; nC<10; nC++){
    nF = nC * 9/5 + 32;
    System.out.println(" " + nC + "°C equals" + "\t" + nF + "°F"); 
    }

    for (nC = 10; nC<11; nC++){
      nF = nC * 9/5+32;
    System.out.println(" " + nC + "°C " + "\t" + nF + "°F" );
    }
  }

}
